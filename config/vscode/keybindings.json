[
  {
    // Trigger suggestions/intellisense
    "command": "editor.action.triggerSuggest",
    "key": "shift+tab",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
  },
  // Copilot (AI)
  {
    "command": "-editor.action.triggerSuggest",
    "key": "cmd+i",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
  },
  {
    // Toggle Copilot Chat panel
    "key": "ctrl+m",
    "command": "workbench.panel.chat",
    "when": "workbench.panel.chat.view.copilot.active"
  },
  {
    "args": {
      "commands": [
        "workbench.action.quickOpen",
        "workbench.action.closeAuxiliaryBar"
      ]
    },
    "command": "runCommands",
    "key": "ctrl+b",
    "when": "auxiliaryBarVisible"
  },
  {
    "args": {
      "commands": [
        "copilot-chat.open",
        "github.copilot.chat.attachSelection",
        "workbench.action.focusAuxiliaryBar"
      ]
    },
    "command": "runCommands",
    "key": "ctrl+m",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus)"
  },
  // Find a file
  {
    "command": "workbench.action.quickOpen",
    "key": "ctrl+p",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.previousEditorInGroup",
    "key": "ctrl+k",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus || terminalFocus)"
  },
  {
    "command": "workbench.action.focusPreviousGroup",
    "key": "ctrl+h",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus || terminalFocus)"
  },
  {
    "command": "workbench.action.focusNextGroup",
    "key": "ctrl+l",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus || terminalFocus)"
  },
  {
    "command": "workbench.action.nextEditorInGroup",
    "key": "ctrl+j",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus || terminalFocus)"
  },
  // Move tabs to up or down in a single group
  {
    "command": "workbench.action.moveEditorLeftInGroup",
    "key": "ctrl+shift+k",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus || terminalFocus)"
  },
  {
    "command": "workbench.action.moveEditorRightInGroup",
    "key": "ctrl+shift+j",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus || terminalFocus)"
  },
  // Move tabs between groups
  {
    "command": "workbench.action.moveEditorToPreviousGroup",
    "key": "ctrl+shift+h",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus || terminalFocus)"
  },
  {
    "command": "workbench.action.moveEditorToNextGroup",
    "key": "ctrl+shift+l",
    "when": "vim.mode != 'Insert' && (editorTextFocus || !inputFocus || terminalFocus)"
  },

  // Find in files
  {
    "command": "workbench.action.findInFiles",
    "key": "space f f",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "args": {
      "commands": ["workbench.view.scm", "workbench.scm.focus"]
    },
    "command": "runCommands",
    "key": "space g g",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  // Format and save
  {
    "args": {
      "commands": [
        "editor.action.formatDocument",
        "workbench.action.files.save"
      ]
    },
    "command": "runCommands",
    "key": "space s",
    "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert'"
  },
  //
  {
    "command": "workbench.explorer.fileView.open",
    "key": "enter",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "command": "renameFile",
    "key": "shift r",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "command": "list.toggleExpand",
    "key": "enter",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused"
  },
  // Sidebar toggling
  {
    "args": {
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },
    "command": "runCommands",
    "key": "space p v",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && !sideBarFocus"
  },
  {
    "args": {
      "commands": ["workbench.action.focusActiveEditorGroup"]
    },
    "command": "runCommands",
    "key": "space p v",
    "when": "sideBarFocus && !inputFocus"
  },
  {
    "command": "workbench.action.toggleSidebarVisibility",
    "key": "ctrl+e",
    "when": "vim.mode != 'Insert'"
  },
  // Terminal toggling
  {
    "command": "workbench.action.terminal.toggleTerminal",
    "key": "space p t",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && !terminalFocus"
  },
  // Code actions
  {
    "command": "editor.action.codeAction",
    "key": "space c a",
    "when": "vim.mode=='Normal' && editorTextFocus"
  },
  // Coding
  {
    "command": "editor.action.moveLinesUpAction",
    "key": "shift-k",
    "when": "vim.mode == 'VisualLine' && editorTextFocus"
  },
  {
    "command": "editor.action.moveLinesDownAction",
    "key": "shift-j",
    "when": "vim.mode == 'VisualLine' && editorTextFocus"
  },
  {
    "command": "editor.action.showHover",
    "key": "shift-k",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.rename",
    "key": "shift-r",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "workbench.action.gotoSymbol",
    "key": "g s",
    "when": "vim.mode == 'Normal' && editorTextFocus && !inputFocus"
  },
  {
    "command": "workbench.action.goToReferences",
    "key": "g r",
    "when": "vim.mode == 'Normal' && editorTextFocus && !inputFocus"
  },
  {
    "command": "workbench.action.goToImplementation",
    "key": "g i",
    "when": "vim.mode == 'Normal' && editorTextFocus && !inputFocus"
  },
  {
    "command": "workbench.action.closeActiveEditor",
    "key": "space x",
    "when": "(vim.mode != 'Insert' && editorTextFocus) || !inputFocus"
  },
  {
    "command": "editor.action.commentLine",
    "key": "g c c",
    "when": "vim.mode != 'Insert' && (editorTextFocus && !inputFocus)"
  },
  // File explorer
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.copy",
    "key": "c",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.paste",
    "key": "p",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.cut",
    "key": "x",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "deleteFile",
    "key": "backspace",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.newFolder",
    "key": "d",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.newFile",
    "key": "a",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.openToSide",
    "key": "s",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },

  // TODO: remember this and configure better later
  {
    "args": {
      "commands": [
        "workbench.action.splitEditorDown",
        "explorer.openAndPassFocus",
        "workbench.action.closeOtherEditors"
      ]
    },
    "command": "runCommands",
    "key": "shift-s",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // Copilot
  {
    // Mark a file to use in the context of copilot
    "args": {
      "commands": ["github.copilot.chat.attachSelection"]
    },
    "command": "runCommands",
    "key": "m",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !inputFocus"
  },
  // Open a file
  {
    "args": {
      "commands": ["explorer.openAndPassFocus"]
    },
    "command": "runCommands",
    "key": "enter",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceIsFolder && !inputFocus"
  },
  {
    "command": "list.toggleExpand",
    "key": "enter",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && explorerResourceIsFolder && !inputFocus"
  },
  // Terminal
  {
    "command": "workbench.action.createTerminalEditorSameGroup",
    "key": "space t",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && !terminalFocus"
  },
  {
    "command": "list.focusFirst",
    "key": "g g",
    "when": "listFocus && !inputFocus && !statusBarFocused"
  },
  {
    "command": "-list.focusFirst",
    "key": "g g",
    "when": "listFocus && !inputFocus"
  },
  // Go to the next problem
  {
    "command": "editor.action.marker.next",
    "key": "]",
    "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert' && !statusBarFocused"
  },
  // Go to the previous problem
  {
    "command": "editor.action.marker.prev",
    "key": "[",
    "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert' && !statusBarFocused"
  },
  {
    "command": "workbench.action.splitEditorRight",
    "key": "ctrl+s",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+s",
    "command": "-extension.vim_ctrl+s",
    "when": "editorTextFocus && vim.active && vim.use<C-s> && !inDebugRepl"
  }
]
